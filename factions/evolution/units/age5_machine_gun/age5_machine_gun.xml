<?xml version="1.0" standalone="no"?>

<unit>
	<parameters>
		<size value="1"/>
		<height value="2"/>
		<max-hp value="1400" regeneration="1"/>
		<max-ep value="0"/>
		<armor value="40"/>	
		<armor-type value="leather"/>				
