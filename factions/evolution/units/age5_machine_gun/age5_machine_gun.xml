		</levels>
		<fields>
			<field value="land"/>
		</fields>	
		<properties/>
		<light enabled="false"/>
		<unit-requirements>
			<unit name="age5_apartment"/>
		</unit-requirements>
		<upgrade-requirements/>
		<resource-requirements>
			<resource name="gold" amount="400"/>	
			<resource name="oil" amount="3"/>	
		</resource-requirements>
		<resources-stored/>
		<image path="images/machine_gun.bmp"/>
		<image-cancel path="$COMMONDATAPATH/images/age5_cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="$COMMONDATAPATH/sounds/swordman_select1.wav"/>
			<sound path="$COMMONDATAPATH/sounds/swordman_select2.wav"/>
			<sound path="$COMMONDATAPATH/sounds/swordman_select3.wav"/>
			<sound path="$COMMONDATAPATH/sounds/swordman_select4.wav"/>
			<sound path="$COMMONDATAPATH/sounds/swordman_select5.wav"/>
			<sound path="$COMMONDATAPATH/sounds/swordman_select6.wav"/>
			<sound path="$COMMONDATAPATH/sounds/swordman_select7.wav"/>
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="$COMMONDATAPATH/sounds/swordman_ack1.wav"/>
			<sound path="$COMMONDATAPATH/sounds/swordman_ack2.wav"/>
			<sound path="$COMMONDATAPATH/sounds/swordman_ack3.wav"/>
			<sound path="$COMMONDATAPATH/sounds/swordman_ack4.wav"/>
			<sound path="$COMMONDATAPATH/sounds/swordman_ack5.wav"/>
			<sound path="$COMMONDATAPATH/sounds/swordman_ack6.wav"/>
		</command-sounds>
	</parameters>

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="45"/>
			<animation path="models/infantry_3_idle.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="220"/>
			<anim-speed value="120"/>
			<animation path="models/infantry_3_walk.g3d"/>
			<sound enabled="false"/>
		</skill>

        <skill>
            <type value="stop"/>
            <name value="hold_skill"/>
            <ep-cost value="0"/>
            <speed value="100"/>
            <anim-speed value="45"/>
            <animation path="models/infantry_3_idle.g3d"/>
            <sound enabled="false"/>
        </skill>

		<skill>
			<type value="move"/>
			<name value="charge_skill"/>		
			<ep-cost value="0"/>
			<speed value="220"/>
			<anim-speed value="125"/>
			<animation path="models/infantry_3_walk.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="300"/>
			<animation path="models/infantry_3_attack.g3d"/>
			<sound enabled="true" start-time="0.47">
				<sound-file path="$COMMONDATAPATH/sounds/chaingun.ogg"/>
			</sound> 
			<particles value="true" start-time="0.4" end-time="0.5">
				<particle-file path="flash.xml"/>
			</particles>
			<attack-strenght value="175"/>
			<attack-var value="25"/>
			<attack-range value="10"/>
			<attack-type value="piercing"/>
			<attack-start-time value="0.4"/>
			<attack-fields>
				<field value="land"/>
				<field value="air"/>
			</attack-fields>
			<projectile value="true">
				<particle value="true" path="particle_proj.xml"/>
				<sound enabled="false"/>
			</projectile>
			<splash value="false"/>
		</skill>

		<skill>
			<type value="morph"/>
			<name value="morph_skill"/>		
			<ep-cost value="0"/>
			<speed value="250"/>
			<anim-speed value="250"/>
			<animation path="models/infantry_3_attack.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="60"/>
			<anim-speed value="60"/>
			<animation path="models/infantry_3_die.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="$COMMONDATAPATH/sounds/swordman_die1.wav"/>
				<sound-file path="$COMMONDATAPATH/sounds/swordman_die2.wav"/>
			</sound>			
			<fade value="false"/>
		</skill>

	</skills>
	
	<commands>
		
		<command>
			<type value="stop"/>
			<name value="stop"/>
			<image path="$COMMONDATAPATH/images/age5_stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="move"/>
			<name value="move"/>
			<image path="$COMMONDATAPATH/images/age5_move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		<command>
			<type value="attack"/>
			<name value="attack"/>
			<image path="images/machine_gun_attack.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="charge_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

		<command>
            <type value="attack_stopped"/>
            <name value="stand_ground"/>
            <image path="$COMMONDATAPATH/images/age5_hold.bmp"/>
            <unit-requirements/>
			<upgrade-requirements>						
				<upgrade name="age5_training_field"/>
			</upgrade-requirements>
            <stop-skill value="hold_skill"/>
            <attack-skill value="attack_skill"/>
		</command>

		<command>
			<type value="morph"/>
			<name value="upgrade_to_age_6"/>
			<image path="../age6_grunt/images/grunt.bmp"/>
			<unit-requirements>
				<unit name="age6_city_center"/>
			</unit-requirements>
			<upgrade-requirements />
			<morph-skill value="morph_skill"/>
			<morph-unit name= "age6_grunt"/>
			<discount value="50"/>
		</command>

	</commands>
</unit>
