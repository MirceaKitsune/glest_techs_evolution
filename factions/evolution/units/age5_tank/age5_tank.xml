<?xml version="1.0" standalone="no"?>

<unit>
	<parameters>
		<size value="3"/>
		<height value="3"/>
		<max-hp value="2000" regeneration="1"/>
		<max-ep value="0"/>
		<armor value="50"/>	
		<armor-type value="metal"/>				
		<sight value="20"/>
		<time value="120"/>	
		<multi-selection value="true"/>	
		<cellmap value="false"/>
		<levels>
			<level name="advanced" kills="12"/>
			<level name="elite" kills="20"/>
		</levels>
		<fields>
			<field value="land"/>
		</fields>	
		<properties>
			<property value="rotated_climb"/>
		</properties>
		<light enabled="false"/>
		<unit-requirements/>
		<upgrade-requirements>
			<upgrade name="age5_rockets"/>
		</upgrade-requirements>
		<resource-requirements>
			<resource name="gold" amount="200"/>	
			<resource name="wood" amount="150"/>	
			<resource name="oil" amount="8"/>
		</resource-requirements>
		<resources-stored/>
		<image path="images/tank.bmp"/>
		<image-cancel path="$COMMONDATAPATH/images/age5_cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="$COMMONDATAPATH/sounds/swordman_select1.wav"/>
			<sound path="$COMMONDATAPATH/sounds/swordman_select2.wav"/>
			<sound path="$COMMONDATAPATH/sounds/swordman_select3.wav"/>
			<sound path="$COMMONDATAPATH/sounds/swordman_select4.wav"/>
			<sound path="$COMMONDATAPATH/sounds/swordman_select5.wav"/>
			<sound path="$COMMONDATAPATH/sounds/swordman_select6.wav"/>
			<sound path="$COMMONDATAPATH/sounds/swordman_select7.wav"/>
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="$COMMONDATAPATH/sounds/swordman_ack1.wav"/>
			<sound path="$COMMONDATAPATH/sounds/swordman_ack2.wav"/>
			<sound path="$COMMONDATAPATH/sounds/swordman_ack3.wav"/>
			<sound path="$COMMONDATAPATH/sounds/swordman_ack4.wav"/>
			<sound path="$COMMONDATAPATH/sounds/swordman_ack5.wav"/>
			<sound path="$COMMONDATAPATH/sounds/swordman_ack6.wav"/>
		</command-sounds>
	</parameters>

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="45"/>
			<animation path="models/m-109_artillery_idle1.g3d"/>
			<animation path="models/m-109_artillery_idle1.g3d"/>
			<animation path="models/m-109_artillery_idle1.g3d"/>
			<animation path="models/m-109_artillery_idle1.g3d"/>
			<animation path="models/m-109_artillery_idle2.g3d"/>
			<animation path="models/m-109_artillery_idle3.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="40"/>
			<animation path="models/m-109_artillery_move.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="move"/>
			<name value="charge_skill"/>		
			<ep-cost value="0"/>
			<speed value="350"/>
			<anim-speed value="40"/>
			<animation path="models/m-109_artillery_move.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="0"/>
			<speed value="50"/>
			<anim-speed value="50"/>
			<animation path="models/m-109_artillery_idle1.g3d"/>
			<sound enabled="true" start-time="0.47">
				<sound-file path="$COMMONDATAPATH/sounds/airship_attack1.wav"/>
			</sound> 
			<particles value="true" start-time="0.4" end-time="0.5">
				<particle-file path="flash.xml"/>
			</particles>
			<attack-strenght value="450"/>
			<attack-var value="50"/>
			<attack-range value="12"/>
			<attack-type value="energy"/>
			<attack-start-time value="0.2"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<projectile value="true">
				<particle value="true" path="particle_proj.xml"/>
				<sound enabled="true">
					<sound-file path="$COMMONDATAPATH/sounds/airship_hit.wav"/>
				</sound>
			</projectile>
			<splash value="true">
				<radius value="1"/>
				<damage-all value="true"/>
				<particle value="true" path="particle_splash.xml"/>
			</splash>
		</skill>

		<skill>
			<type value="morph"/>
			<name value="morph_skill"/>		
			<ep-cost value="0"/>
			<speed value="150"/>
			<anim-speed value="30"/>
			<animation path="models/m-109_artillery_idle1.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="60"/>
			<anim-speed value="60"/>
			<animation path="models/m-109_artillery_die.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="$COMMONDATAPATH/sounds/swordman_die1.wav"/>
				<sound-file path="$COMMONDATAPATH/sounds/swordman_die2.wav"/>
			</sound>			
			<fade value="false"/>
		</skill>


	</skills>
	
	<commands>
		
		<command>
			<type value="stop"/>
			<name value="stop"/>
			<image path="$COMMONDATAPATH/images/age5_stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="move"/>
			<name value="move"/>
			<image path="$COMMONDATAPATH/images/age5_move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		<command>
			<type value="attack"/>
			<name value="attack_land"/>
			<image path="images/tank_attack.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="charge_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

		<command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="$COMMONDATAPATH/images/age5_hold.bmp"/>
			<unit-requirements/>
			<upgrade-requirements>						
				<upgrade name="age5_training_field"/>
			</upgrade-requirements>
			<stop-skill value="stop_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

		<command>
			<type value="morph"/>
			<name value="upgrade_to_age_6"/>
			<image path="../age6_battle_tank/images/battle_tank.bmp"/>
			<unit-requirements>
				<unit name="age6_city_center"/>
			</unit-requirements>
			<upgrade-requirements />
			<morph-skill value="morph_skill"/>
			<morph-unit name= "age6_battle_tank"/>
			<discount value="50"/>
		</command>

	</commands>
</unit>
