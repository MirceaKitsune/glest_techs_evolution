<?xml version="1.0" standalone="no"?>

<unit>

	<!-- *** parameters *** -->

	<parameters>
		<size value="2"/>
		<height value="3"/>
		<max-hp value="400" regeneration="0"/>
		<max-ep value="15" regeneration="1"/>
		<armor value="0"/>	
		<armor-type value="metal"/>				
		<sight value="20"/>
		<time value="20"/>	
		<multi-selection value="true"/>	
		<cellmap value="false"/>
		<levels>
		</levels>
		<fields>
			<field value="air"/>
		</fields>	
		<properties/>
		<light enabled="false"/>
		<unit-requirements/>
		<upgrade-requirements/>
		<resource-requirements>
			<resource name="wood" amount="300"/>
			<resource name="gold" amount="200"/>
			<resource name="oil" amount="10"/>		
		</resource-requirements>
		<resources-stored/>
		<image path="images/gunship.bmp"/>
		<image-cancel path="$COMMONDATAPATH/images/age6_cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="$COMMONDATAPATH/sounds/fe_sel1.wav"/>
			<sound path="$COMMONDATAPATH/sounds/fe_sel2.wav"/>
			<sound path="$COMMONDATAPATH/sounds/fe_sel3.wav"/>		
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="$COMMONDATAPATH/sounds/fe_ack1.wav"/>
			<sound path="$COMMONDATAPATH/sounds/fe_ack2.wav"/>
			<sound path="$COMMONDATAPATH/sounds/fe_ack3.wav"/>
		</command-sounds>
	</parameters>


	<!-- *** skills *** -->

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="500"/>
			<anim-speed value="120"/>
			<animation path="models/gunshipstand.g3d"/>       <particles value="true">
         <particle-file path="air_dust.xml"/>
			</particles>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="700"/>
			<anim-speed value="120"/>
			<animation path="models/gunshiprun.g3d"/>       <particles value="true">
         <particle-file path="air_dust.xml"/>
			</particles>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="0"/>
			<speed value="100"/>
			<anim-speed value="100"/>
			<animation path="models/gunshipshoot.g3d"/>       <particles value="true">	
			<particle-file path="gunship_mflash.xml"/>         <particle-file path="air_dust.xml"/>
			</particles>
			<particles value="true" start-time="0.1" end-time="0.6">
				<particle-file path="mflash.xml"/>
			</particles>
			<sound enabled="true" start-time="0.20">
				<sound-file path="$COMMONDATAPATH/sounds/hmg.wav"/>
			</sound>
			<attack-strenght value="38"/>
			<attack-var value="12"/>
			<attack-range value="5"/>
			<attack-type value="piercing"/>
			<attack-start-time value="0.40"/>
			<attack-fields>
				<field value="land"/>
				<field value="air"/>
			</attack-fields>
			<projectile value="false"/>
			<splash value="true">
				<radius value="0"/>
				<damage-all value="true"/>
				<particle value="true" path="hgun_hit.xml"/>
			</splash>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="missle_skill"/>		
			<ep-cost value="15"/>
			<speed value="100"/>
			<anim-speed value="400"/>
			<animation path="models/gunshipmissle.g3d"/>       <particles value="true">
				<particle-file path="air_dust.xml"/>
			</particles>
			<sound enabled="true" start-time="0.20">
				<sound-file path="$COMMONDATAPATH/sounds/missle_.wav"/>
			</sound>
			<attack-strenght value="130"/>
			<attack-var value="50"/>
			<attack-range value="7"/>
			<attack-type value="impact"/>
			<attack-start-time value="0.20"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<projectile value="true">
				<particle value="true" path="gunship_rocket_proj.xml"/>
				<sound enabled="true">
					<sound-file path="$COMMONDATAPATH/sounds/small_expl.wav"/>
				</sound>
			</projectile>
			<splash value="true">
				<radius value="1"/>
				<damage-all value="true"/>
				<particle value="true" path="shell_expl.xml"/>
			</splash>
		</skill>

		<skill>
			<type value="morph"/>
			<name value="morph_skill"/>		
			<ep-cost value="0"/>
			<speed value="150"/>
			<anim-speed value="350"/>
			<animation path="models/gunshipmissle.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="60"/>
			<anim-speed value="80"/>
			<animation path="models/gunshipdie.g3d"/>
				<particles value="true" start-time="0.1" end-time="0.4">
         			<particle-file path="expl_small.xml"/>
				</particles>
			<sound enabled="true" start-time="0">
				<sound-file path="$COMMONDATAPATH/sounds/tank_destroy_2.wav"/>
			</sound>			
			<fade value="false"/>
		</skill>

	</skills>

	<!-- *** commands *** -->
	
	<commands>
		
		<command>
			<type value= "stop"/>
			<name value="stop"/>
			<image path="$COMMONDATAPATH/images/age6_stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="move"/>
			<name value="move"/>
			<image path="$COMMONDATAPATH/images/age6_move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		<command>
			<type value="attack"/>
			<name value="attack"/>
			<image path="images/gunship_attack_hmg.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

		<command>
			<type value="attack"/>
			<name value="attack"/>
			<image path="images/gunship_attack_missle.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="missle_skill"/>
		</command>		

		<command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="$COMMONDATAPATH/images/age6_hold.bmp"/>
			<unit-requirements/>
			<upgrade-requirements>						
				<upgrade name="age6_training_field"/>
			</upgrade-requirements>
			<stop-skill value="stop_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

		<command>
			<type value="morph"/>
			<name value="upgrade_to_age_7"/>
			<image path="../age7_disc_droid/images/disc_droid.bmp"/>
			<unit-requirements>
				<unit name="age7_baseship"/>
			</unit-requirements>
			<upgrade-requirements />
			<morph-skill value="morph_skill"/>
			<morph-unit name= "age7_disc_droid"/>
			<discount value="50"/>
		</command>

	</commands>
</unit>
